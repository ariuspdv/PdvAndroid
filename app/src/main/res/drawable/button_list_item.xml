<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <solid android:color="#efefef" />
    </shape>
</item>
<item
    android:left="-3dp"
    android:right="-1dp"
    android:bottom="-1dp"
    android:top="-4dp">
    <shape>
        <solid android:color="#efefef" />

        <stroke
            android:width="2dp"
            android:color="#c4c4c4" />
    </shape>
</item>

</layer-list>
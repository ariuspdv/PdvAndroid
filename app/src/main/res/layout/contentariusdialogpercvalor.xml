<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lbContentDialogPercValorTitulo"
        android:text="Valor do ReforÃ§o"
        android:paddingTop="10dp"
        style="@style/AriusTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/pnlContentDialogoPercValorPerc"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtContentDialogPercValorPerc"
                    android:ellipsize="end"
                    android:ems="10"
                    style="@style/AriusTextEdit"
                    android:hint="Percetual"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pnlContentDialogoValorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <EditText
                    android:id="@+id/edtContentDialogPercValorValor"
                    style="@style/AriusTextEdit"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="Valor"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd" />
            </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnContentDialogValorCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:maxLines="2"
            android:padding="20dp"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/button_action_left"
            android:text="Cancelar"
            android:textSize="@dimen/textsize_action" />

        <Button
            android:id="@+id/btnContentDialogValorConfirmar"
            android:layout_width="0dp"
            android:background="@drawable/button_action_right"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="?attr/colorPrimary"
            android:text="Confirmar"
            android:textSize="@dimen/textsize_action" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>

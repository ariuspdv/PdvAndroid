<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbContentDialogPercValorTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desconto Total Venda"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbContentDialogPercValorPerc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Percentual"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtContentDialogPercValorPerc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:ems="10"
                android:hint="Informar o percetual"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbContentDialogPercValorValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Valor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtContentDialogPercValorValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:ems="10"
                android:hint="Informar o valor"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnContentDialogValorCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Cancelar"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnContentDialogValorConfirmar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Confirmar"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>

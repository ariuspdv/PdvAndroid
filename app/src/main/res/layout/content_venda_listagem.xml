<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.arius.pdvarius.VendaListagemActivity">

    <include layout="@layout/activity_padrao" />

    <TextView
        android:id="@+id/lbVendaListagemSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Venda Situação: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cmbVendaListagemSituacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbVendaListagemSituacao"
        android:layout_toEndOf="@+id/lbVendaListagemSituacao" />

    <arius.pdv.db.AriusListView
        android:id="@+id/grdVendaListagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbVendaListagemSituacao"
        android:layout_marginTop="15dp"
        app:campos_exibir_listview="@array/LayoutVendaListagem"
        app:entity_listview="Venda"
        app:layout_arius_listview="@layout/layoutvendalistagem"
        app:montaAdapter="true" />


</RelativeLayout>

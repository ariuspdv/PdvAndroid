<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/activity_padrao" />

    <TextView
        android:id="@+id/lbTitulo_entrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbTitulo_Entrada"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_above="@+id/edt_AberturaCaixa"
        android:layout_marginBottom="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/edt_AberturaCaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="15"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_AberturaCaixa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/btn_Abrir_Caixa"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.arius.pdvarius.MainActivity">

    <include layout="@layout/activity_padrao" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pnlCmbPesqProduto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbCmbPesqProduto"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Produto"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cmbPesqProduto"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" />

        <arius.pdv.db.AriusAutoCompleteTextView
            android:id="@+id/cmbPesqProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:hint="EAN e ou Descrição"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCmbPesqProduto" />

        <ImageButton
            android:id="@+id/btnCmbPesqProduto"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:layout_marginRight="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_marginEnd="1dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pnlVendaItens"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_below="@+id/pnlCmbPesqProduto"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/lbVendaItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-335dp"
            android:text="Itens da Venda"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <arius.pdv.db.AriusListView
            android:id="@+id/grdVenda_Item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animationCache="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbVendaItem"
            app:layout_constraintVertical_bias="0.0"
            app:swipe_delete="true"
            app:layout_arius_listview="@layout/layout_combobox"
            app:campos_exibir_listview="@array/combo_produto"
            app:entity_listview="VendaItem"
            app:montaAdapter="false"/>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnSplitter_ProdClass"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:allowUndo="false"
        android:layout_below="@+id/pnlVendaItens"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:id="@+id/grdProduto_Classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSplitter_ProdClass"
        android:numColumns="4"
        android:layout_above="@+id/pnlTotal_Items" />

    <FrameLayout
        android:id="@+id/pnlTotal_Items"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/btnVenda_Finalizar"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Valor Total:"
            android:textAlignment="viewStart"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="R$ 100,00"
            android:textAlignment="textEnd"
            android:textSize="50sp"
            android:textStyle="bold" />
    </FrameLayout>

    <Button
        android:id="@+id/btnVenda_Finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="@string/btnVenda_finalizaer"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>

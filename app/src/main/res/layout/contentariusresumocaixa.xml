<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.arius.pdvarius.AriusActivityResumoCaixa"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resumo de Caixa"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="textStart"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/lbResumoCaixaDtAbertura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Data Abertura: "
            android:textAlignment="textStart"
            android:textSize="22dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/grdResumoCaixa"
        android:paddingTop="2dp"
        android:background="@drawable/grid_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        layout="@layout/contentariusresumocaixarodape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResumoCaixaFecharCaixa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_event"
            android:text="Fechar Caixa"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

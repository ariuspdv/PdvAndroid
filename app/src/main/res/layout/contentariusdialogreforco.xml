<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbReforcoDialog"
        android:text="Valor do Reforço"
        android:paddingTop="10dp"
        style="@style/AriusTextView"/>

    <EditText
        android:id="@+id/edtReforcoDialog"
        android:ellipsize="end"
        style="@style/AriusTextEdit"
        android:ems="10"
        android:hint="Informar o valor para o Reforço"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnReforcoDialogCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:maxLines="2"
            android:padding="20dp"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/button_action_left"
            android:text="Cancelar"
            android:textSize="@dimen/textsize_action" />

        <Button
            android:id="@+id/btnReforcoDialogOK"
            android:layout_width="0dp"
            android:background="@drawable/button_action_right"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="?attr/colorPrimary"
            android:text="Confirmar"
            android:textSize="@dimen/textsize_action" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>

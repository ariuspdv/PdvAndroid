<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edtContentAriusCategoriaNavegacao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Refrigerantes >"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnProCategoriaVoltar"
            style="@style/AriusButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.20"
            android:text="Voltar" />
    </LinearLayout>

    <TextView
        android:id="@+id/lbContentAriusCategoriaProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arius_spinner"
        android:text="Produtos"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grdProduto_Categoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grid_list"
        android:clipToPadding="false"
        android:numColumns="4"
        android:paddingTop="2dp" />

</LinearLayout>

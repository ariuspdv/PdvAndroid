<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgVendaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_vendaaberta"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/lbTitle_ActionBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="PDV Arius"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="@dimen/textsize_actionbar"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/lbStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="@dimen/textsize_actionbar"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />
        <!--<ImageView-->
            <!--android:id="@+id/imgPDVStatus"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5sp"-->
            <!--android:contentDescription=""-->
            <!--android:scaleType="center"-->
            <!--app:srcCompat="@drawable/ic_circle_red"-->
            <!--tools:ignore="ContentDescription" />-->
    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbSangriaDialogFinalizadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Finalizadora da Sangria"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cmbSangriaDialogFinalizadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"/>

    <TextView
        android:id="@+id/lbSangriaDialogValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Valor da Sangria"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtSangriaDialogValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSangriaDialogOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="OK"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSangriaDialogCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Cancelar"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>

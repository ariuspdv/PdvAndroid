<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_list"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblayoutFinalizaVendaRodapeDesconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desconto Total Venda"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edtlayoutFinalizaVendaRodapeDesconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 0,00"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlayoutFinalizaVendaRodapeDesconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_orange_event"
                android:text="Desconto"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblayoutFinalizaVendaRodapeAcrescimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acréscimo Total Venda"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edtlayoutFinalizaVendaRodapeAcrescimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 0,00"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlayoutFinalizaVendaRodapeAcrescimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="ACRÉSCIMO"
                android:background="@drawable/button_orange_event"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnlayoutFinalizaVendaRodapeFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_red_event"
        android:elevation="0dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar Venda"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>

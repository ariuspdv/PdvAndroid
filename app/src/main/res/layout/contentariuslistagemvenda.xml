<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <EditText
                android:id="@+id/edtcontentariusListagemVendaDataInicio"
                style="@style/AriusTextEdit"
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
                android:selectAllOnFocus="false"
                android:hint="Data Inicial"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <EditText
                android:id="@+id/edtcontentariusListagemVendaDataFim"
                android:ems="10"
                android:hint="Data Final"
                android:focusable="false"
                android:inputType="date"
                android:textAlignment="center"
                style="@style/AriusTextEdit"/>

        </android.support.design.widget.TextInputLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <TabHost
        android:id="@+id/tabhost"
        android:background="@drawable/grid_list"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tbsListagemVendaCategoria"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="#efefef"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!--<TextView-->
                        <!--android:id="@+id/lbListagemCategoria"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:text="Descrição:"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textStyle="bold" />-->

                    <Spinner
                        android:id="@+id/cbmListageVendaCategoria"
                        android:layout_width="0dp"
                        android:paddingStart="5dp"
                        android:background="@drawable/arius_spinner"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tbsListagemVendaProduto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#efefef"
                    android:orientation="horizontal">

                    <!--<TextView-->
                        <!--android:id="@+id/lbListagemProduto"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:text="Descrição:"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textStyle="bold" />-->

                    <Spinner
                        android:id="@+id/cbmListageVendaProduto"
                        android:layout_width="0dp"
                        android:background="@drawable/arius_spinner"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tbsListagemVendaVenda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#efefef"
                    android:orientation="horizontal">

                    <!--<TextView-->
                        <!--android:id="@+id/lbListagemVenda"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:text="Situação:"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textStyle="bold" />-->

                    <Spinner
                        android:id="@+id/cbmListageVendaSituacao"
                        android:layout_width="0dp"
                        android:background="@drawable/arius_spinner"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Venda"
            android:padding="10dp"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:textColor="#595959"
            android:textAlignment="center"
            android:textSize="24dp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valor Total"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="0.3"
            android:textColor="#595959"
            android:textAlignment="center"
            android:textSize="24dp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="0.3"
            android:textColor="#595959"
            android:textAlignment="center"
            android:textSize="24dp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:layout_weight="0.1"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="24dp"  />

    </LinearLayout>

    <ListView
        android:id="@+id/grdListagemVenda"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/grid_list"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/btnListagemVendaPesquisar"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange_event"
        app:srcCompat="@mipmap/find" />

</LinearLayout>
